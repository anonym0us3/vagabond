
<p class="center" >
<strong >Edit Your Post:</strong></p>

<%= form_for @post do |f| %>
  <p class="center">Title: </p>
  <div class="center">
  
    <%= f.text_field :title, placeholder: "Title" %>
  </div>
   <p class="center">Content:</p>
  <div class="center">
 
    <%= f.text_area :content, placeholder: "Content" %>
  </div>
  <div class="center">
  <%= f.submit "Save Post" %>
  <%= button_to "Back", post_path, method: :get %>
<% end %>
