<div class ="container" style="width:50%; position:relative; dispay:inline; float:left;">

<div>
	<%= image_tag @user.avatar.url(:medium) %>
</div>
<br><br>

 	<div>
		Signed in as, <%= @user.email %>
	</div>

	<div>
		welcome, <%= @user.first_name %> <%= @user.last_name %>
	</div>

	<div>
		this profile was created on: <%= @user.created_at %>
	</div>
	<div><%= button_to "Edit User", edit_user_path, method: :get %>
				
	</div>
</div>


<div  style="width:50%; position:relative; display:inline; float:right;"> 
	<h2>Posts</h2>

	<% @posts.each do |post| %>
		<ol style="list-style-type:none">
			<li><%= link_to post.title, post_path(post.id) %></li>
			<div style="display:inline-block"><%= button_to "Edit Post", edit_post_path(post.id), method: :get%>	</div>
			<div style="display:inline-block"><%= button_to "Delete Post", delete_post_path(post.id), :data => {:confirm => 'Are you sure?'}, method: :delete %></div>
			<br>
		</ol>	
	<% end %>
 <!-- <%= yield %> -->

</div>



